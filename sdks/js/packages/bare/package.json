{
  "name": "@buildonspark/bare",
  "version": "0.0.26",
  "author": "",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "type": "module",
  "description": "Spark SDK",
  "homepage": "https://github.com/buildonspark/spark",
  "files": [
    "dist",
    "src",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "import": {
        "default": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.js"
        }
      },
      "require": {
        "default": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.cjs"
        }
      }
    },
    "./package": "./package.json"
  },
  "scripts": {
    "build": "yarn tsc && rm -rf dist && tsup",
    "build:watch": "yarn build --watch --clean=false",
    "clean": "rm -rf dist",
    "circular-deps": "madge --circular --extensions ts,tsx src",
    "dev": "yarn build -- --watch",
    "depcheck": "depcheck --ignores='bare-*'",
    "format:fix": "prettier . --write",
    "format": "prettier . --check",
    "lint:fix": "eslint --fix .",
    "lint:fix:continue": "eslint --fix . || exit 0",
    "lint:watch": "esw ./src -w --ext .ts,.tsx,.js --color",
    "lint": "eslint .",
    "package:checks": "yarn depcheck && yarn publint && yarn attw --pack . && echo \"\nPackage checks passed successfully!\"",
    "postversion": "yarn build",
    "test-cmd": "node --experimental-vm-modules $(yarn bin jest) --no-cache --runInBand --detectOpenHandles --forceExit",
    "test": "echo \"Skipping for now\"",
    "types:watch": "tsc-absolute --watch",
    "types": "tsc"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@noble/hashes": "^1.7.0",
    "depcheck": "^1.4.7",
    "madge": "^8.0.0",
    "prettier": "^3.6.2",
    "publint": "^0.3.9",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@buildonspark/spark-frost-bare-addon": "0.0.4",
    "@buildonspark/spark-sdk": "0.4.5",
    "bare-node-runtime": "^1.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "madge": {
    "detectiveOptions": {
      "ts": {
        "skipTypeImports": true
      },
      "tsx": {
        "skipTypeImports": true
      }
    }
  }
}
